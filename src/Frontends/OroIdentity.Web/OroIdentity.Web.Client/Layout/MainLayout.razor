@inherits LayoutComponentBase
@attribute [Authorize]

<FluentLayout>
    <FluentHeader>
        OroIdentityServer WEB
        <FluentSpacer />
        <UserInfoComponent />
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <a href="https://www.github.com/ojrojas" target="_blank">OroIdentityServer @DateTime.UtcNow.ToString("yyyy")</a>
        <FluentSpacer />
        <a href="https://www.github.com/ojrojas/oroidentityserver" target="_blank">About OroIdentityServer</a>
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

<FluentToastProvider />
<FluentDialogProvider />
<FluentTooltipProvider />
<FluentMessageBarProvider />
<FluentMenuProvider />