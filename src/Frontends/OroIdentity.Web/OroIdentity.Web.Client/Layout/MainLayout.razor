@inherits LayoutComponentBase
@attribute [Authorize]

<FluentLayout>
    <FluentDesignTheme StorageName="theme" @bind-Mode="_mode" />
    <FluentHeader>
        OroIdentityServer WEB
        <FluentSpacer />
        <UserInfoComponent />
        <FluentButton class="theme-toggle" @onclick="ToggleTheme" IconStart="@(_mode == Microsoft.FluentUI.AspNetCore.Components.DesignThemeModes.Dark ? new Icons.Regular.Size24.WeatherMoon() : new Icons.Regular.Size24.WeatherSunny())"></FluentButton>
    </FluentHeader>
    <FluentStack Class="main" Orientation="Orientation.Horizontal" Width="100%">
        <NavMenu />
        <FluentBodyContent Class="body-content">
            <div class="content">
                @Body
            </div>
        </FluentBodyContent>
    </FluentStack>
    <FluentFooter>
        <a href="https://www.github.com/ojrojas" target="_blank">OroIdentityServer @DateTime.UtcNow.ToString("yyyy")</a>
        <FluentSpacer />
        <a href="https://www.github.com/ojrojas/oroidentityserver" target="_blank">About OroIdentityServer</a>
    </FluentFooter>
</FluentLayout>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

<FluentToastProvider />
<FluentDialogProvider />
<FluentTooltipProvider />
<FluentMessageBarProvider />
<FluentMenuProvider />

@code {
    private Microsoft.FluentUI.AspNetCore.Components.DesignThemeModes _mode = Microsoft.FluentUI.AspNetCore.Components.DesignThemeModes.System;

    private void ToggleTheme()
    {
        _mode = _mode == Microsoft.FluentUI.AspNetCore.Components.DesignThemeModes.Dark
            ? Microsoft.FluentUI.AspNetCore.Components.DesignThemeModes.Light
            : Microsoft.FluentUI.AspNetCore.Components.DesignThemeModes.Dark;
    }
}