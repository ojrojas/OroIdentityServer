@page "/roles"
@using OroIdentity.Web.Client.Models

@attribute [Authorize]

@inject NavigationManager NavigationManager


<PageTitle>Roles</PageTitle>

<HeaderPagesComponent TitlePage="Roles" Description="Manage your roles">
    <FluentButton Appearance="Appearance.Accent" OnClick="RedirectToCreatePage">Create</FluentButton>
</HeaderPagesComponent>

<FluentDivider Style="width: 100%;height:20px;" Orientation=Orientation.Horizontal Role="DividerRole.Separator"></FluentDivider>
<FluentDataGrid Items="roles" AutoGenerateColumns="false" Style="height:600px;width:100%">
    <PropertyColumn Property="@(r => r.Name)" Sortable="true"/>
    <PropertyColumn Property="@(r => r.IsActive)"  />
</FluentDataGrid>

@code{

    public IQueryable<RoleViewModel> roles { get; set; }

    private void RedirectToCreatePage()
    {
        NavigationManager.NavigateTo("/create-application");
    }
}