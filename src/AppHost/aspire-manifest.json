{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "Seq": {
      "type": "container.v0",
      "connectionString": "{Seq.bindings.http.url}",
      "image": "docker.io/datalust/seq:2025.2",
      "env": {
        "ACCEPT_EULA": "Y",
        "SEQ_FIRSTRUN_NOAUTHENTICATION": "True"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 80
        }
      }
    },
    "identity-api": {
      "type": "project.v0",
      "path": "../Services/OroIdentityServer/OroIdentityServer.Api/OroIdentityServer.Api.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{identity-api.bindings.http.targetPort}",
        "ConnectionStrings__Seq": "{Seq.connectionString}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        }
      }
    },
    "identity-web": {
      "type": "project.v0",
      "path": "../Frontends/OroIdentity.Web/OroIdentity.Web.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{identity-web.bindings.http.targetPort}",
        "ConnectionStrings__Seq": "{Seq.connectionString}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        }
      }
    }
  }
}